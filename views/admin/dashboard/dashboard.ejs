    <script>

        document.addEventListener("DOMContentLoaded", () => {

            // Update current date and time
        function updateDateTime() {
            const now = new Date();
            const dateOptions = { 
                weekday: 'short', 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            };
            const timeOptions = { 
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit',
                hour12: true 
            };
            
            document.getElementById('currentDate').textContent = now.toLocaleDateString('en-IN', dateOptions);
            document.getElementById('currentTime').textContent = now.toLocaleTimeString('en-IN', timeOptions);
        }
        
        updateDateTime();
        setInterval(updateDateTime, 1000);

        // Sidebar functionality (keep existing sidebar code)
        const sidebar = document.getElementById("sidebar")
        const mainContent = document.getElementById("main-content")
        const sidebarToggle = document.getElementById("sidebar-toggle")
        const mobileMenuToggle = document.getElementById("mobile-menu-toggle")
        const sidebarLinks = document.querySelectorAll(".sidebar-link")

        initializeSidebar()

        if (sidebarToggle) {
            sidebarToggle.addEventListener("click", () => {
                toggleSidebar()
            })
        }

        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener("click", () => {
                sidebar.classList.toggle("show")
            })
        }

        highlightActiveLink()

        document.addEventListener("click", (e) => {
            if (window.innerWidth <= 768) {
                if (!sidebar.contains(e.target) && !mobileMenuToggle.contains(e.target)) {
                    sidebar.classList.remove("show")
                }
            }
        })

        window.addEventListener("resize", () => {
            if (window.innerWidth > 768) {
                sidebar.classList.remove("show")
            }
        })

        function initializeSidebar() {
            if (sidebar && mainContent) {
                const isCollapsed = localStorage.getItem("sidebarCollapsed") === "true"
                if (isCollapsed) {
                    sidebar.classList.add("collapsed")
                    mainContent.classList.add("expanded")
                    if (sidebarToggle) {
                        updateToggleIcon(true)
                    }
                }
            }
        }

        function toggleSidebar() {
            const isCollapsed = sidebar.classList.toggle("collapsed")
            mainContent.classList.toggle("expanded")
            updateToggleIcon(isCollapsed)
            localStorage.setItem("sidebarCollapsed", isCollapsed)
        }

        function updateToggleIcon(isCollapsed) {
            if (sidebarToggle) {
                const icon = sidebarToggle.querySelector("i")
                if (icon) {
                    if (isCollapsed) {
                        icon.classList.remove("fa-chevron-left")
                        icon.classList.add("fa-chevron-right")
                    } else {
                        icon.classList.remove("fa-chevron-right")
                        icon.classList.add("fa-chevron-left")
                    }
                }
            }
        }

        function highlightActiveLink() {
            const currentPath = window.location.pathname
            if (sidebarLinks.length > 0) {
                sidebarLinks.forEach((link) => {
                    link.classList.remove("active")
                })
                sidebarLinks.forEach((link) => {
                    const linkPath = new URL(link.href).pathname
                    if (linkPath === currentPath) {
                        link.classList.add("active")
                    }
                })
                sidebarLinks.forEach((link) => {
                    link.addEventListener("click", function (e) {
                        sidebarLinks.forEach((l) => l.classList.remove("active"))
                        this.classList.add("active")
                    })
                })
            }
        }

        // Toast function
        function showToast(message, type = 'success') {
            const toastElement = document.getElementById('liveToast');
            const toastBody = document.getElementById('toastMessage');
            toastBody.textContent = message;
            
            toastElement.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'bg-info');
            
            switch(type) {
                case 'success':
                    toastElement.classList.add('bg-success');
                    break;
                case 'error':
                    toastElement.classList.add('bg-danger');
                    break;
                case 'warning':
                    toastElement.classList.add('bg-warning');
                    break;
                case 'info':
                    toastElement.classList.add('bg-info');
                    break;
            }
            
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
        }

        // Chart.js setup
        const ctx = document.getElementById('salesChart');
        let salesChart = null;

        if (ctx) {
            salesChart = new Chart(ctx.getContext('2d'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Sales (₹)',
                        data: [],
                        backgroundColor: 'rgba(200, 200, 200, 0.1)',
                        borderColor: 'rgba(200, 200, 200, 0.8)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 8,
                        pointBackgroundColor: [],
                        pointBorderColor: '#fff',
                        pointBorderWidth: 3,
                        pointHoverRadius: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const value = context.parsed.y;
                                    if (value >= 10000000) {
                                        return 'Sales: ₹' + (value / 10000000).toFixed(2) + ' Cr';
                                    } else if (value >= 100000) {
                                        return 'Sales: ₹' + (value / 100000).toFixed(2) + ' L';
                                    } else if (value >= 1000) {
                                        return 'Sales: ₹' + (value / 1000).toFixed(0) + 'K';
                                    }
                                    return 'Sales: ₹' + value.toLocaleString();
                                },
                                afterLabel: function(context) {
                                    // This will be updated dynamically in updateDashboard function
                                    const amount = context.parsed.y;
                                    if (amount >= 80000) return 'Target: Excellent ✓';
                                    if (amount >= 50000) return 'Target: Good';
                                    if (amount >= 20000) return 'Target: Fair';
                                    return 'Target: Below Expected';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            suggestedMax: 100000, // Initial max for daily
                            grid: {
                                color: 'rgba(0,0,0,0.1)'
                            },
                            ticks: {
                                callback: function(value) {
                                    // Format based on value size
                                    if (value >= 10000000) { // 1 Crore or more
                                        return '₹' + (value / 10000000).toFixed(2) + 'Cr';
                                    } else if (value >= 100000) { // 1 Lakh or more
                                        return '₹' + (value / 100000).toFixed(2) + 'L';
                                    } else if (value >= 1000) { // 1 Thousand or more
                                        return '₹' + (value / 1000).toFixed(0) + 'K';
                                    } else {
                                        return '₹' + value.toLocaleString();
                                    }
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    },
                    animation: {
                        duration: 2000,
                        easing: 'easeInOutQuart'
                    }
                }
            });
        }

        async function fetchDashboardData(filterType = 'daily', startDate = '', endDate = '', updateUrl = true) {
            try {
                // Show loading state
                if (salesChart) {
                    salesChart.options.plugins.subtitle = {
                        display: true,
                        text: 'Loading...',
                        color: '#6c757d'
                    };
                    salesChart.update('none');
                }
                
                const params = new URLSearchParams({ filterType });
                if (startDate) params.append('startDate', startDate);
                if (endDate) params.append('endDate', endDate);
                
                const response = await fetch(`/admin/dashboard?${params.toString()}`, {
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                const result = await response.json();
                
                if (result.success) {
                    updateDashboard(result.data);
                    updateChartLegend(filterType);
                    
                    // Update URL with filter parameters
                    if (updateUrl) {
                        updateURL(filterType, startDate, endDate);
                    }
                    
                    // Remove loading state
                    if (salesChart) {
                        salesChart.options.plugins.subtitle.display = false;
                        salesChart.update('none');
                    }
                } else {
                    showToast('Failed to load dashboard data', 'error');
                }
            } catch (error) {
                console.error('Error fetching dashboard data:', error);
                showToast('Error loading dashboard data', 'error');
                
                // Remove loading state on error
                if (salesChart) {
                    salesChart.options.plugins.subtitle.display = false;
                    salesChart.update('none');
                }
            }
        }

        // Update dashboard with fetched data
        function updateDashboard(data) {
            // Update stats cards
            const statsValues = document.querySelectorAll('.stats-value');
            statsValues[0].textContent = '₹' + data.stats.totalRevenue.toLocaleString();
            statsValues[1].textContent = data.stats.totalOrders.toLocaleString();
            statsValues[2].textContent = data.stats.totalUsers.toLocaleString();

            // Update chart
            if (salesChart && data.chartData) {
                salesChart.data.labels = data.chartData.labels;
                salesChart.data.datasets[0].data = data.chartData.data;
                
                // Calculate max value from data
                const maxDataValue = Math.max(...data.chartData.data, 0);
                
                // Update Y-axis scale based on filter type (get from current active filter)
                const activeFilter = document.querySelector('.filter-btn.active');
                const currentFilter = activeFilter ? activeFilter.getAttribute('data-filter') : 'daily';
                const suggestedMax = getSuggestedMaxValue(currentFilter, maxDataValue);
                
                // Update Y-axis configuration
                salesChart.options.scales.y.suggestedMax = suggestedMax;
                
                // Update point colors and line segments based on target achievement
                if (data.chartData.pointColors && data.chartData.pointColors.length > 0) {
                    // Set point colors
                    salesChart.data.datasets[0].pointBackgroundColor = data.chartData.pointColors;
                    
                    // Update line segment colors to match the points
                    salesChart.options.plugins.tooltip.callbacks.afterLabel = function(context) {
                        const amount = context.parsed.y;
                        if (amount >= 80000) return 'Target: Excellent ✓';
                        if (amount >= 50000) return 'Target: Good';
                        if (amount >= 20000) return 'Target: Fair';
                        return 'Target: Below Expected';
                    };
                    
                    // Create segment coloring
                    salesChart.data.datasets[0].segment = {
                        borderColor: (ctx) => {
                            if (ctx.p0DataIndex === undefined || !data.chartData.pointColors) {
                                return 'rgba(200, 200, 200, 0.8)';
                            }
                            return data.chartData.pointColors[ctx.p0DataIndex] || 'rgba(200, 200, 200, 0.8)';
                        },
                        borderWidth: 3
                    };
                    
                    // Create gradient background
                    const canvasElement = document.getElementById('salesChart');
                    const ctx = canvasElement.getContext('2d');
                    const gradient = ctx.createLinearGradient(0, 0, 0, canvasElement.height);
                    gradient.addColorStop(0, 'rgba(40, 167, 69, 0.15)');
                    gradient.addColorStop(0.5, 'rgba(255, 193, 7, 0.1)');
                    gradient.addColorStop(1, 'rgba(220, 53, 69, 0.15)');
                    salesChart.data.datasets[0].backgroundColor = gradient;
                }
                
                salesChart.update('none');
                setTimeout(() => salesChart.update(), 10);
            }

            // Update top products - CORRECTED SELECTOR
            const productsContainer = document.querySelector('.col-lg-4:nth-child(1) .top-items-list');
            if (productsContainer && data.topProducts) {
                updateTopList(productsContainer, data.topProducts, 'sold');
            }
            
            // Update top categories - CORRECTED SELECTOR
            const categoriesContainer = document.querySelector('.col-lg-4:nth-child(2) .top-items-list');
            if (categoriesContainer && data.topCategories) {
                updateTopList(categoriesContainer, data.topCategories, 'products sold');
            }
            
            // Update top brands - CORRECTED SELECTOR
            const brandsContainer = document.querySelector('.col-lg-4:nth-child(3) .top-items-list');
            if (brandsContainer && data.topBrands) {
                updateTopList(brandsContainer, data.topBrands, 'products sold');
            }
        }

        // Update top lists - CORRECTED FUNCTION
        function updateTopList(container, items, metaText) {
            if (!container || !items || items.length === 0) {
                container.innerHTML = '<div class="text-center p-3 text-muted">No data available</div>';
                return;
            }
            
            container.innerHTML = items.map((item, index) => `
                <div class="top-item">
                    <div class="item-rank">${index + 1}</div>
                    <div class="item-info">
                        <div class="item-name">${item.name}</div>
                        <div class="item-meta">${item.sold} ${metaText}</div>
                    </div>
                    <div class="item-amount">₹${item.revenue.toLocaleString()}</div>
                </div>
            `).join('');
        }

        // Update legend based on filter type
        function updateChartLegend(filterType) {
            const legendContainer = document.getElementById('chartLegend');
            if (!legendContainer) return;
            
            let legends = [];
            
            switch(filterType) {
                case 'daily':
                    legends = [
                        { color: 'rgba(220, 53, 69, 1)', text: 'Below ₹20,000 (Red)' },
                        { color: 'rgba(253, 126, 20, 1)', text: '₹20,000 - ₹50,000 (Orange)' },
                        { color: 'rgba(255, 193, 7, 1)', text: '₹50,000 - ₹80,000 (Yellow)' },
                        { color: 'rgba(40, 167, 69, 1)', text: '₹80,000+ (Green)' }
                    ];
                    break;
                case 'weekly':
                    legends = [
                        { color: 'rgba(220, 53, 69, 1)', text: 'Below ₹1.4L (Red)' },
                        { color: 'rgba(253, 126, 20, 1)', text: '₹1.4L - ₹3.5L (Orange)' },
                        { color: 'rgba(255, 193, 7, 1)', text: '₹3.5L - ₹5.6L (Yellow)' },
                        { color: 'rgba(40, 167, 69, 1)', text: '₹5.6L+ (Green)' }
                    ];
                    break;
                case 'monthly':
                    legends = [
                        { color: 'rgba(220, 53, 69, 1)', text: 'Below ₹6L (Red)' },
                        { color: 'rgba(253, 126, 20, 1)', text: '₹6L - ₹15L (Orange)' },
                        { color: 'rgba(255, 193, 7, 1)', text: '₹15L - ₹24L (Yellow)' },
                        { color: 'rgba(40, 167, 69, 1)', text: '₹24L+ (Green)' }
                    ];
                    break;
                case 'yearly':
                    legends = [
                        { color: 'rgba(220, 53, 69, 1)', text: 'Below ₹73L (Red)' },
                        { color: 'rgba(253, 126, 20, 1)', text: '₹73L - ₹1.82Cr (Orange)' },
                        { color: 'rgba(255, 193, 7, 1)', text: '₹1.82Cr - ₹2.92Cr (Yellow)' },
                        { color: 'rgba(40, 167, 69, 1)', text: '₹2.92Cr+ (Green)' }
                    ];
                    break;
                case 'custom':
                    legends = [
                        { color: 'rgba(220, 53, 69, 1)', text: 'Below Target (Red)' },
                        { color: 'rgba(253, 126, 20, 1)', text: 'Low Target (Orange)' },
                        { color: 'rgba(255, 193, 7, 1)', text: 'Medium Target (Yellow)' },
                        { color: 'rgba(40, 167, 69, 1)', text: 'High Target (Green)' }
                    ];
                    break;
                default:
                    legends = [
                        { color: 'rgba(220, 53, 69, 1)', text: 'Below ₹20,000 (Red)' },
                        { color: 'rgba(253, 126, 20, 1)', text: '₹20,000 - ₹50,000 (Orange)' },
                        { color: 'rgba(255, 193, 7, 1)', text: '₹50,000 - ₹80,000 (Yellow)' },
                        { color: 'rgba(40, 167, 69, 1)', text: '₹80,000+ (Green)' }
                    ];
            }
            
            legendContainer.innerHTML = legends.map(legend => `
                <div class="legend-item">
                    <span class="legend-color" style="background-color: ${legend.color};"></span>
                    <span class="legend-text">${legend.text}</span>
                </div>
            `).join('');
        }

        // Calculate suggested max value for Y-axis based on filter type
        function getSuggestedMaxValue(filterType, maxDataValue) {
            let targetMax;
            
            switch(filterType) {
                case 'daily':
                    targetMax = 100000; // 1 Lakh
                    break;
                case 'weekly':
                    targetMax = 700000; // 7 Lakhs
                    break;
                case 'monthly':
                    targetMax = 3000000; // 30 Lakhs
                    break;
                case 'yearly':
                    targetMax = 36500000; // 3.65 Crores
                    break;
                case 'custom':
                    targetMax = Math.max(100000, maxDataValue * 1.2); // 20% more than max data
                    break;
                default:
                    targetMax = 100000;
            }
            
            // If actual data exceeds target, use data max + 20%
            return Math.max(targetMax, maxDataValue * 1.2);
        }

        // Update URL with filter parameters
        function updateURL(filterType, startDate = '', endDate = '') {
            const url = new URL(window.location.href);
            url.searchParams.set('filter', filterType);
            
            if (filterType === 'custom' && startDate && endDate) {
                url.searchParams.set('startDate', startDate);
                url.searchParams.set('endDate', endDate);
            } else {
                url.searchParams.delete('startDate');
                url.searchParams.delete('endDate');
            }
            
            // Update URL without page reload
            window.history.pushState({ filter: filterType }, '', url);
        }

        // Get filter from URL on page load
        function getFilterFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            const filter = urlParams.get('filter');
            const startDate = urlParams.get('startDate');
            const endDate = urlParams.get('endDate');
            
            return {
                filter: filter || 'daily',
                startDate: startDate || '',
                endDate: endDate || ''
            };
        }

        // Date input setup
        const today = new Date().toISOString().split('T')[0];
        const customStartDate = document.getElementById('customStartDate');
        const customEndDate = document.getElementById('customEndDate');
        
        if (customStartDate) customStartDate.setAttribute('max', today);
        if (customEndDate) customEndDate.setAttribute('max', today);

        customStartDate?.addEventListener('change', function() {
            customEndDate?.setAttribute('min', this.value);
        });

        // Filter button handling
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const filter = this.getAttribute('data-filter');
                
                // Remove active class from all buttons
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                
                // Add active class to clicked button
                this.classList.add('active');
                
                if (filter === 'custom') {
                    customDateInputs.style.display = 'inline-block';
                } else {
                    customDateInputs.style.display = 'none';
                    fetchDashboardData(filter, '', '', true); // true = update URL
                }
            });
        });

        document.getElementById('applyCustomFilter')?.addEventListener('click', function() {
            const startDate = customStartDate.value;
            const endDate = customEndDate.value;
            
            if (!startDate || !endDate) {
                showToast('Please select both start and end dates', 'warning');
                return;
            }
            
            if (new Date(startDate) > new Date(endDate)) {
                showToast('Start date cannot be greater than end date', 'error');
                return;
            }
            
            fetchDashboardData('custom', startDate, endDate, true); // true = update URL
            showToast('Custom date range applied successfully', 'success');
        });

        // Download handlers
        document.getElementById('downloadPDF')?.addEventListener('click', async function(e) {
            e.preventDefault();
            const urlParams = new URLSearchParams(window.location.search);
            const filterType = urlParams.get('filter') || 'daily';
            const startDate = urlParams.get('startDate') || '';
            const endDate = urlParams.get('endDate') || '';
            
            let downloadUrl = `/admin/dashboard/download/pdf?filterType=${filterType}`;
            if (startDate && endDate) {
                downloadUrl += `&startDate=${startDate}&endDate=${endDate}`;
            }
            
            showToast('Generating PDF...', 'info');
            window.location.href = downloadUrl;
        });

        document.getElementById('downloadExcel')?.addEventListener('click', async function(e) {
            e.preventDefault();
            const urlParams = new URLSearchParams(window.location.search);
            const filterType = urlParams.get('filter') || 'daily';
            const startDate = urlParams.get('startDate') || '';
            const endDate = urlParams.get('endDate') || '';
            
            let downloadUrl = `/admin/dashboard/download/excel?filterType=${filterType}`;
            if (startDate && endDate) {
                downloadUrl += `&startDate=${startDate}&endDate=${endDate}`;
            }
            
            showToast('Generating Excel...', 'info');
            window.location.href = downloadUrl;
        });

        // Load initial data from URL or default to daily
        const urlFilter = getFilterFromURL();

        // Set active button based on URL
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.classList.remove('active');
            if (btn.getAttribute('data-filter') === urlFilter.filter) {
                btn.classList.add('active');
            }
        });

        // Show custom date inputs if filter is custom
        if (urlFilter.filter === 'custom' && urlFilter.startDate && urlFilter.endDate) {
            const customDateInputs = document.getElementById('customDateInputs');
            const customStartDate = document.getElementById('customStartDate');
            const customEndDate = document.getElementById('customEndDate');
            
            if (customDateInputs) customDateInputs.style.display = 'inline-block';
            if (customStartDate) customStartDate.value = urlFilter.startDate;
            if (customEndDate) customEndDate.value = urlFilter.endDate;
            
            fetchDashboardData(urlFilter.filter, urlFilter.startDate, urlFilter.endDate, false); // false = don't update URL
        } else {
            fetchDashboardData(urlFilter.filter, '', '', false); // false = don't update URL on initial load
        }

        updateChartLegend(urlFilter.filter);

        // Handle browser back/forward buttons
        window.addEventListener('popstate', function(event) {
            const urlFilter = getFilterFromURL();
            
            // Update active button
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.getAttribute('data-filter') === urlFilter.filter) {
                    btn.classList.add('active');
                }
            });
            
            // Handle custom date inputs
            const customDateInputs = document.getElementById('customDateInputs');
            if (urlFilter.filter === 'custom' && urlFilter.startDate && urlFilter.endDate) {
                if (customDateInputs) customDateInputs.style.display = 'inline-block';
                document.getElementById('customStartDate').value = urlFilter.startDate;
                document.getElementById('customEndDate').value = urlFilter.endDate;
                fetchDashboardData(urlFilter.filter, urlFilter.startDate, urlFilter.endDate, false);
            } else {
                if (customDateInputs) customDateInputs.style.display = 'none';
                fetchDashboardData(urlFilter.filter, '', '', false);
            }
            
            updateChartLegend(urlFilter.filter);
        });

        // Animations (keep existing)
        const statsCards = document.querySelectorAll('.stats-card');
        statsCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Apply hover effects to dynamically loaded items using event delegation
        document.querySelector('.row.mb-4')?.addEventListener('mouseenter', function(e) {
            if (e.target.closest('.top-item')) {
                e.target.closest('.top-item').style.transform = 'translateX(5px)';
            }
        }, true);

        document.querySelector('.row.mb-4')?.addEventListener('mouseleave', function(e) {
            if (e.target.closest('.top-item')) {
                e.target.closest('.top-item').style.transform = 'translateX(0)';
            }
        }, true);
    });
    </script>
