        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeSidebar();
            // Highlight active sidebar link
            const sidebarLinks = document.querySelectorAll('.sidebar-link');
            sidebarLinks.forEach(link => {
                if (link.getAttribute('data-page') === 'orders') {
