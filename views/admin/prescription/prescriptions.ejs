                        <div class="detail-row">
                            <span class="detail-label">Hospital:</span>
                            <span class="detail-value" id="viewModalHospital"></span>
                        </div>
                    </div>

                    <div class="prescription-details mb-4">
                        <h6 class="mb-3 fw-bold">Patient Information</h6>
                        <div class="detail-row">
                            <span class="detail-label">Patient Name:</span>
                            <span class="detail-value" id="viewModalPatientName"></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Age:</span>
                            <span class="detail-value" id="viewModalPatientAge"></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Gender:</span>
                            <span class="detail-value" id="viewModalPatientGender"></span>
                        </div>
                    </div>

                    <div class="prescription-details mb-4">
                        <h6 class="mb-3 fw-bold">Dates</h6>
                        <div class="detail-row">
                            <span class="detail-label">Prescription Date:</span>
                            <span class="detail-value" id="viewModalPrescDate"></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Expiry Date:</span>
                            <span class="detail-value" id="viewModalExpiryDate"></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Verification Date:</span>
                            <span class="detail-value" id="viewModalVerificationDate"></span>
                        </div>
                    </div>

                    <div class="prescription-details mb-4">
                        <h6 class="mb-3 fw-bold">Status</h6>
                        <div class="detail-row">
                            <span class="detail-label">Current Status:</span>
                            <span class="detail-value" id="viewModalStatus"></span>
                        </div>
                        <div class="detail-row" id="viewModalRejectionReasonRow" style="display: none;">
                            <span class="detail-label">Rejection Reason:</span>
                            <span class="detail-value" id="viewModalRejectionReason"></span>
                        </div>
                    </div>

                    <div class="prescription-image-container">
                        <h6 class="mb-3 fw-bold">Prescription Image</h6>
                        <img id="viewModalImage" class="prescription-image" src="" alt="Prescription" onclick="showFullscreenImage(this.src)">
                    </div>
                </div>
                <div class="modal-footer" id="viewModalFooter">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Fullscreen Image Modal -->
    <div class="fullscreen-modal" id="fullscreenModal" onclick="closeFullscreenImage()">
        <div class="fullscreen-content" onclick="event.stopPropagation()">
            <span class="fullscreen-close" onclick="closeFullscreenImage()">
                <i class="fas fa-times"></i>
            </span>
            <img id="fullscreenImage" class="fullscreen-image" src="" alt="Prescription Fullscreen">
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
        <div id="responseToast" class="toast" role="alert">
            <div class="toast-header">
                <strong class="me-auto" id="toastTitle">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // State
        let currentPage = 1;
        let itemsPerPage = 10;
        let currentSearch = '';
        let currentFilter = 'Pending';
        let currentSort = 'desc';
        let selectedPrescriptionId = '';
        let selectedUserId = '';
        let prescriptionsData = [];
        let totalPages = 1;

        // Sidebar functionality
        function initializeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('collapsed');
                    mainContent.classList.toggle('expanded');
                    
                    const icon = this.querySelector('i');
                    if (sidebar.classList.contains('collapsed')) {
                        icon.classList.remove('fa-chevron-left');
                        icon.classList.add('fa-chevron-right');
                    } else {
                        icon.classList.remove('fa-chevron-right');
                        icon.classList.add('fa-chevron-left');
                    }
                });
            }

            if (mobileMenuToggle) {
                mobileMenuToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                });
            }

            document.addEventListener('click', function(event) {
                if (window.innerWidth <= 768) {
                    if (!sidebar.contains(event.target) && !mobileMenuToggle.contains(event.target)) {
                        sidebar.classList.remove('show');
                    }
                }
            });
        }

        // Setup event listeners
        function setupEventListeners() {
            document.getElementById('searchInput').addEventListener('input', handleSearch);
            document.getElementById('sortOrder').addEventListener('change', handleSort);
            document.getElementById('limitInput').addEventListener('change', handleLimitChange);

            document.getElementById('searchClear').addEventListener('click', function() {
                document.getElementById('searchInput').value = '';
                this.style.display = 'none';
                currentSearch = '';
                currentPage = 1;
                loadPrescriptions();
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            initializeSidebar();

            const currentPath = window.location.pathname;
            const sidebarLinks = document.querySelectorAll('.sidebar-link');
            sidebarLinks.forEach(link => {
                link.classList.remove('active');
                const href = link.getAttribute('href');
                if (href && currentPath.includes('/prescription')) {
                    if (href.includes('/prescription')) {
                        link.classList.add('active');
                    }
                }
            });

            // Read URL params on page load
            const urlParams = new URLSearchParams(window.location.search);
            currentPage = parseInt(urlParams.get('page')) || 1;
            itemsPerPage = parseInt(urlParams.get('limit')) || 10;
            currentSearch = urlParams.get('search') || '';
            currentSort = urlParams.get('sort') || 'desc';
            currentFilter = urlParams.get('filter') || 'All';
            
            // Update UI elements to match URL params
            document.getElementById('searchInput').value = currentSearch;
            document.getElementById('sortOrder').value = currentSort;
            document.getElementById('limitInput').value = itemsPerPage;
            if (currentSearch) {
                document.getElementById('searchClear').style.display = 'block';
            }
            
            // Set active filter card
            document.querySelectorAll('.stat-card').forEach(card => {
                card.classList.remove('active');
                if (card.getAttribute('data-filter') === currentFilter) {
                    card.classList.add('active');
                }
            });

            updateStatsDisplay();
            setupEventListeners();
            loadPrescriptions();
        });

        window.addEventListener('popstate', function() {
            const urlParams = new URLSearchParams(window.location.search);
            currentPage = parseInt(urlParams.get('page')) || 1;
            itemsPerPage = parseInt(urlParams.get('limit')) || 10;
            currentSearch = urlParams.get('search') || '';
            currentSort = urlParams.get('sort') || 'desc';
            currentFilter = urlParams.get('filter') || 'Pending';
            
            loadPrescriptions();
        });

        async function loadPrescriptions() {
            try {
                const queryParams = new URLSearchParams({
                    page: currentPage,
                    limit: itemsPerPage,
                    search: currentSearch,
                    sort: currentSort,
                    filter: currentFilter
                });

                const response = await fetch(`/admin/prescription?${queryParams}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.message || 'Failed to fetch prescriptions');
                }
                
                const data = await response.json();
                
                if (data.success) {
                    prescriptionsData = data.prescriptions;
                    
                    const { totalPage, currentPage: backendPage } = data.pagination;
                    const totalItems = data.prescriptions.length;
                    
                    renderPrescriptions();
                    renderPagination(totalPage);
                    updateShowingText(totalItems);
                    updateStatsDisplay();
                    updateURL();
                } else {
                    showToast(data.message || 'Failed to load prescriptions', 'error');
                }
            } catch (error) {
                console.error('Error loading prescriptions:', error);
                showToast(error.message || 'Failed to load prescriptions', 'error');
                
                const tbody = document.getElementById('prescriptionsTableBody');
                tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4">Failed to load prescriptions. Please refresh the page.</td></tr>';
            }
        }

        function renderPrescriptions() {
            const tbody = document.getElementById('prescriptionsTableBody');
            tbody.innerHTML = '';

            if (prescriptionsData.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4">No prescriptions found</td></tr>';
                return;
            }

            const startIndex = (currentPage - 1) * itemsPerPage;

            prescriptionsData.forEach((prescription, index) => {
                const row = document.createElement('tr');
                const serialNo = startIndex + index + 1;
                
                row.innerHTML = `
                <td><strong>${serialNo}</strong></td>
                <td>${prescription.userId?.fullName || 'N/A'}</td>
                <td>${prescription.productId?.name || prescription.medicineName || 'N/A'}</td>
                <td>
                    <div style="font-size: 0.85rem;">
                        <div><strong>Presc:</strong> ${formatDate(prescription.prescriptionDate)}</div>
                        <div><strong>Expiry:</strong> ${formatDate(prescription.expiryDate)}</div>
                    </div>
                </td>
                <td>${prescription.doctor?.name || 'N/A'}</td>
                <td>${prescription.patient?.name || 'N/A'}</td>
                <td>${renderStatus(prescription.status)}</td>
                <td>
                    <div class="action-buttons">
                        <button class="btn-action btn-status" onclick="showStatusModal('${prescription._id}')">
                            <i class="fas fa-toggle-on"></i> Status
                        </button>
                        <button class="btn-action btn-view" onclick="showViewModal('${prescription._id}')">
                            <i class="fas fa-eye"></i> View
                        </button>
                    </div>
                </td>
            `;
                tbody.appendChild(row);
            });
        }

        function renderStatus(status) {
            const statusMap = {
                'Pending': '<span class="status-badge status-pending">Pending</span>',
                'Verified': '<span class="status-badge status-verified">Verified</span>',
                'Rejected': '<span class="status-badge status-rejected">Rejected</span>',
                'Expired': '<span class="status-badge status-expired">Expired</span>'
            };
            return statusMap[status] || '<span class="status-badge">Unknown</span>';
        }

        function filterPrescriptions(filter) {
            currentFilter = filter;
            currentPage = 1;

            document.querySelectorAll('.stat-card').forEach(card => {
                card.classList.remove('active');
            });
            if (filter !== 'All') {
                document.querySelector(`[data-filter="${filter}"]`)?.classList.add('active');
            }

            loadPrescriptions();
        }

        function clearAllFilters() {
            currentFilter = 'All';
            currentSearch = '';
            currentSort = 'desc';
            currentPage = 1;
            itemsPerPage = 10;
            
            document.getElementById('searchInput').value = '';
            document.getElementById('searchClear').style.display = 'none';
            document.getElementById('sortOrder').value = 'desc';
            document.getElementById('limitInput').value = 10;
            
            document.querySelectorAll('.stat-card').forEach(card => {
                card.classList.remove('active');
            });
            
            loadPrescriptions();
        }

        function handleSearch(e) {
            currentSearch = e.target.value.trim();
            const searchClear = document.getElementById('searchClear');
            searchClear.style.display = currentSearch ? 'block' : 'none';
            
            clearTimeout(window.searchTimeout);
            window.searchTimeout = setTimeout(() => {
                currentPage = 1;
                loadPrescriptions();
            }, 500);
        }

        function handleSort(e) {
            currentSort = e.target.value;
            currentPage = 1;
            loadPrescriptions();
        }

        function handleLimitChange(e) {
            const value = parseInt(e.target.value);
            if (value && value > 0) {
                itemsPerPage = value;
                currentPage = 1;
                loadPrescriptions();
            }
        }

        function renderPagination(backendTotalPages) {
            totalPages = backendTotalPages || 1;
            const paginationContainer = document.getElementById('paginationContainer');
            paginationContainer.innerHTML = '';

            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage - 1}); return false;">Previous</a>`;
            paginationContainer.appendChild(prevLi);

            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                    const li = document.createElement('li');
                    li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                    li.innerHTML = `<a class="page-link" href="#" onclick="changePage(${i}); return false;">${i}</a>`;
                    paginationContainer.appendChild(li);
                } else if (i === currentPage - 2 || i === currentPage + 2) {
                    const li = document.createElement('li');
                    li.className = 'page-item disabled';
                    li.innerHTML = `<a class="page-link" href="#">...</a>`;
                    paginationContainer.appendChild(li);
                }
            }

            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${currentPage === totalPages || totalPages === 0 ? 'disabled' : ''}`;
            nextLi.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage + 1}); return false;">Next</a>`;
            paginationContainer.appendChild(nextLi);
        }

        function changePage(page) {
            if (page < 1 || page > totalPages) return;
            currentPage = page;
            loadPrescriptions();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function updateShowingText(totalCount) {
            const startIndex = ((currentPage - 1) * itemsPerPage) + 1;
            const endIndex = Math.min(currentPage * itemsPerPage, totalCount);
            
            document.getElementById('showingStart').textContent = totalCount === 0 ? 0 : startIndex;
            document.getElementById('showingEnd').textContent = endIndex;
            document.getElementById('totalCount').textContent = totalCount;
        }

        async function updateStatsDisplay() {
            try {
                const response = await fetch('/admin/prescription?limit=10000', {
                    headers: { 'Accept': 'application/json' }
                });
                
                if (!response.ok) throw new Error('Failed to fetch stats');
                
                const data = await response.json();
                if (data.success) {
                    const allPrescriptions = data.prescriptions;
                    
                    const pendingCount = allPrescriptions.filter(p => p.status === 'Pending').length;
                    const verifiedCount = allPrescriptions.filter(p => p.status === 'Verified').length;
                    const rejectedCount = allPrescriptions.filter(p => p.status === 'Rejected').length;
                    const expiredCount = allPrescriptions.filter(p => p.status === 'Expired').length;

                    document.getElementById('pendingCount').textContent = pendingCount;
                    document.getElementById('verifiedCount').textContent = verifiedCount;
                    document.getElementById('rejectedCount').textContent = rejectedCount;
                    document.getElementById('expiredCount').textContent = expiredCount;
                }
            } catch (error) {
                console.error('Error updating stats:', error);
            }
        }

        function showStatusModal(prescriptionId) {
            const prescription = prescriptionsData.find(p => p._id === prescriptionId);
            if (!prescription) return;

            selectedPrescriptionId = prescriptionId;
            selectedUserId = prescription.userId?._id;

            document.getElementById('statusModalUserName').textContent = prescription.userId?.fullName || 'N/A';
            document.getElementById('statusModalProductName').textContent = prescription.productId?.name || 'N/A';
            document.getElementById('statusModalMedicine').textContent = prescription.medicineName || 'N/A';
            document.getElementById('statusModalUOM').textContent = prescription.uom || 'N/A';
            document.getElementById('statusModalUsedUOM').textContent = prescription.usedUom || '0';
            document.getElementById('statusModalPrescDate').textContent = formatDate(prescription.prescriptionDate);
            document.getElementById('statusModalExpiryDate').textContent = formatDate(prescription.expiryDate);
            
            const imageUrl = prescription.prescriptionImages?.[0]?.url || '';
            document.getElementById('statusModalImage').src = imageUrl;
            
            document.getElementById('rejectionReason').value = '';
            document.getElementById('rejectionReasonError').textContent = '';
            document.getElementById('rejectionReason').classList.remove('is-invalid');
            
            const modal = new bootstrap.Modal(document.getElementById('statusModal'));
            modal.show();
        }

        async function changeStatus(status) {
            try {
                let rejectionReason = '';
                
                if (status === 'Rejected') {
                    rejectionReason = document.getElementById('rejectionReason').value.trim();
                    if (!rejectionReason) {
                        document.getElementById('rejectionReason').classList.add('is-invalid');
                        document.getElementById('rejectionReasonError').textContent = 'Rejection reason is required';
                        return;
                    }
                }

                const response = await fetch('/admin/prescription/status-change', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        prescriptionId: selectedPrescriptionId,
                        userId: selectedUserId,
                        status: status,
                        rejectionReason: rejectionReason
                    })
                });

                const result = await response.json();

                const modal = bootstrap.Modal.getInstance(document.getElementById('statusModal'));
                if (modal) {
                    modal.hide();
                }

                if (result.success) {
                    showToast(result.message, 'success');
                    await loadPrescriptions();
                } else {
                    showToast(result.message, 'warning');
                }
            } catch (error) {
                console.error('Error changing status:', error);
                showToast('Failed to change status', 'error');
            }
        }

        function showViewModal(prescriptionId) {
            const prescription = prescriptionsData.find(p => p._id === prescriptionId);
            if (!prescription) return;

            document.getElementById('viewModalUserName').textContent = prescription.userId?.fullName || 'N/A';            document.getElementById('viewModalUserEmail').textContent = prescription.userId?.email || 'N/A';
            document.getElementById('viewModalProductName').textContent = prescription.productId?.name || 'N/A';
            document.getElementById('viewModalMedicine').textContent = prescription.medicineName || 'N/A';
            document.getElementById('viewModalUOM').textContent = prescription.uom || 'N/A';
            document.getElementById('viewModalUsedUOM').textContent = prescription.usedUom || '0';
            document.getElementById('viewModalDoctorName').textContent = prescription.doctor?.name || 'N/A';
            document.getElementById('viewModalHospital').textContent = prescription.doctor?.hospital || 'N/A';
            document.getElementById('viewModalPatientName').textContent = prescription.patient?.name || 'N/A';
            document.getElementById('viewModalPatientAge').textContent = prescription.patient?.age || 'N/A';
            document.getElementById('viewModalPatientGender').textContent = prescription.patient?.gender || 'N/A';
            document.getElementById('viewModalPrescDate').textContent = formatDate(prescription.prescriptionDate);
            document.getElementById('viewModalExpiryDate').textContent = formatDate(prescription.expiryDate);
            document.getElementById('viewModalVerificationDate').textContent = prescription.verificationDate ? formatDate(prescription.verificationDate) : 'N/A';
            document.getElementById('viewModalStatus').innerHTML = renderStatus(prescription.status);
            
            const rejectionReasonRow = document.getElementById('viewModalRejectionReasonRow');
            if (prescription.status === 'Rejected' && prescription.rejectionReason) {
                document.getElementById('viewModalRejectionReason').textContent = prescription.rejectionReason;
                rejectionReasonRow.style.display = 'flex';
            } else {
                rejectionReasonRow.style.display = 'none';
            }
            
            const imageUrl = prescription.prescriptionImages?.[0]?.url || '';
            document.getElementById('viewModalImage').src = imageUrl;

            const footer = document.getElementById('viewModalFooter');
            footer.innerHTML = '<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>';
            
            if (prescription.status === 'Pending') {
                selectedPrescriptionId = prescriptionId;
                selectedUserId = prescription.userId?._id;
                
                footer.innerHTML = `
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="changeStatusFromView('Rejected')">Reject</button>
                    <button type="button" class="btn btn-success" onclick="changeStatusFromView('Verified')">Accept</button>
                `;
            }
            
            const modal = new bootstrap.Modal(document.getElementById('viewModal'));
            modal.show();
        }

        async function changeStatusFromView(status) {
            if (status === 'Rejected') {
                const modal = bootstrap.Modal.getInstance(document.getElementById('viewModal'));
                modal.hide();
                
                setTimeout(() => {
                    showStatusModal(selectedPrescriptionId);
                }, 300);
            } else {
                try {
                    const response = await fetch('/admin/prescription/status-change', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            prescriptionId: selectedPrescriptionId,
                            userId: selectedUserId,
                            status: status,
                            rejectionReason: ''
                        })
                    });

                    const result = await response.json();

                    const modal = bootstrap.Modal.getInstance(document.getElementById('viewModal'));
                    if (modal) {
                        modal.hide();
                    }

                    if (result.success) {
                        showToast(result.message, 'success');
                        await loadPrescriptions();
                    } else {
                        showToast(result.message, 'warning');
                    }
                } catch (error) {
                    console.error('Error changing status:', error);
                    showToast('Failed to change status', 'error');
                }
            }
        }

        function showFullscreenImage(src) {
            document.getElementById('fullscreenImage').src = src;
            document.getElementById('fullscreenModal').classList.add('show');
        }

        function closeFullscreenImage() {
            document.getElementById('fullscreenModal').classList.remove('show');
        }

        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            const date = new Date(dateString);
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            return `${day}/${month}/${year}`;
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('responseToast');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            const toastHeader = toast.querySelector('.toast-header');
            
            let bgClass = 'bg-success';
            let titleText = 'Success';
            
            if (type === 'error') {
                bgClass = 'bg-danger';
                titleText = 'Error';
            } else if (type === 'warning') {
                bgClass = 'bg-warning';
                titleText = 'Warning';
            }
            
            toastHeader.className = `toast-header ${bgClass} text-white`;
            toastTitle.textContent = titleText;
            toastMessage.textContent = message;
            
            const bsToast = new bootstrap.Toast(toast, { delay: 5000 });
            bsToast.show();
        }

        function updateURL() {
            const params = new URLSearchParams();
            
            if (currentPage > 1) params.set('page', currentPage);
            if (itemsPerPage !== 10) params.set('limit', itemsPerPage);
            if (currentSearch) params.set('search', currentSearch);
            if (currentSort !== 'desc') params.set('sort', currentSort);
            if (currentFilter !== 'Pending') params.set('filter', currentFilter);
            
            const newURL = params.toString() 
                ? `/admin/prescription?${params.toString()}`
                : '/admin/prescription';
            
            window.history.pushState({}, '', newURL);
        }
    </script>
