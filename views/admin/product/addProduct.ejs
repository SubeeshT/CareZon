        }
        function initializeDiscountValueValidation(variantId) {
            const discountInput = document.getElementById(`variantDiscountValue${variantId}`);
            const errorDiv = document.getElementById(`variantDiscountValue${variantId}-error`);
            
            if (!discountInput || !errorDiv) return;
            
            discountInput.addEventListener('input', function() {
                const value = parseFloat(this.value);
                
                // Clear previous error styling
                discountInput.classList.remove('is-invalid', 'is-valid');
                errorDiv.textContent = '';
                errorDiv.classList.remove('show-error');
                
                // Validate the value
                if (this.value === '') {
                    // Empty is okay, will default to 0
                    discountInput.classList.add('is-valid');
                    return;
                }
                
                if (isNaN(value)) {
                    discountInput.classList.add('is-invalid');
                    errorDiv.textContent = 'Please enter a valid number';
                    errorDiv.classList.add('show-error');
                    return;
                }
                
                if (value < 0) {
                    discountInput.classList.add('is-invalid');
                    errorDiv.textContent = 'Discount value cannot be negative';
                    errorDiv.classList.add('show-error');
                    return;
                }
                
                if (value > 80) {
                    discountInput.classList.add('is-invalid');
                    errorDiv.textContent = 'Discount value cannot exceed 80%';
                    errorDiv.classList.add('show-error');
                    return;
                }
                
                // Valid value
                discountInput.classList.add('is-valid');
            });
            
            // Also validate on blur (when user leaves the field)
            discountInput.addEventListener('blur', function() {
                if (this.value === '') {
                    this.value = '0'; // Set default value
                    discountInput.classList.add('is-valid');
                }
            });
        }
