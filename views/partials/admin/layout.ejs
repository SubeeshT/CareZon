<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Carezon Admin' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/admin/css/dashboard.css">
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(function(css) { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }); %>
    <% } %>
</head>
<body>
    <!-- Header -->
    <%- include('./header') %>

    <!-- Sidebar -->
    <%- include('./sidebar') %>

    <!-- Main Content -->
    <main class="main-content" id="main-content">
        <div class="content-wrapper">
            <!-- Page Header -->
            <% if (typeof pageTitle !== 'undefined') { %>
                <div class="page-header mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="page-title"><%= pageTitle %></h1>
                            <% if (typeof breadcrumb !== 'undefined') { %>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <% breadcrumb.forEach(function(item, index) { %>
                                            <% if (index === breadcrumb.length - 1) { %>
                                                <li class="breadcrumb-item active" aria-current="page"><%= item.name %></li>
                                            <% } else { %>
                                                <li class="breadcrumb-item"><a href="<%= item.url %>"><%= item.name %></a></li>
                                            <% } %>
                                        <% }); %>
                                    </ol>
                                </nav>
                            <% } %>
                        </div>
                        <% if (typeof pageActions !== 'undefined') { %>
                            <div class="page-actions">
                                <%- pageActions %>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>

            <!-- Page Content -->
            <div class="page-content">
                <%- body %>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="/admin/js/dashboard.js"></script> -->
    <% if (typeof additionalJS !== 'undefined') { %>
        <% additionalJS.forEach(function(js) { %>
            <script src="<%= js %>"></script>
        <% }); %>
    <% } %>
</body>
</html>
