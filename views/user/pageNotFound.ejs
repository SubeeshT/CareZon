                                <ellipse cx="225" cy="250" rx="8" ry="20" fill="#FFB6C1" transform="rotate(-45 225 250)"/>
                                <ellipse cx="275" cy="250" rx="8" ry="20" fill="#FFB6C1" transform="rotate(45 275 250)"/>
                                
