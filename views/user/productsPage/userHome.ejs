<!-- Featured Products - Medical Equipments & Body Support -->
<section class="featured-products">
  <div class="container">
    <h2 class="animate__animated animate__fadeInUp">Medical Equipment & Body Support</h2>
    <p class="subtitle animate__animated animate__fadeInUp">Professional medical equipment and body support products for your health needs.</p>
    
    <!-- First Row -->
    <div class="row">
      <% if(medicalEquipments && medicalEquipments.length > 0){ %>
        <% medicalEquipments.slice(0, 4).forEach(product => { %>
          <div class="col-12 col-sm-6 col-md-3">
            <div class="featured-product-card animate__animated animate__fadeInUp" onclick="location.href='/products/shop?category=<%= product.category._id %>'">
